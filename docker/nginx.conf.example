# This is an example nginx.conf file that can be adjusted
# if you are using nginx and want pretty 

# Redirect logs to stdout and stderr
error_log /dev/stderr warn;
access_log /dev/stdout;

server {
    listen 8000;
    root /cops;
    index index.php;

    # X-Accel-Redirect uri from COPS - see config/local.php
    #location /mapped/library {
    #    # internal redirect for nginx
    #    internal;
    #    # actual path on nginx server
    #    alias /volume1/Calibre
    #    # or if COPS and nginx are on the same server
    #    #root /
    #}

    location / {
        # This tells NGINX: If the file doesn't exist,
        # send the request to index.php and keep the path info.
        try_files $uri $uri/ /index.php$request_uri;
    }

    location ~ [^/]\.php(/|$) {
        # Split the path to populate $fastcgi_path_info
        fastcgi_split_path_info ^(.+\.php)(.*)$;

        # Verify the file exists before passing to PHP
        if (!-f $document_root$fastcgi_script_name) { return 404; }

        fastcgi_pass 127.0.0.1:9000;
        include fastcgi_params;
        fastcgi_buffering off;

        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
        fastcgi_param PATH_TRANSLATED $document_root$fastcgi_path_info;
    }
}